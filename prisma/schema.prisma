generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model kiotviet_trademark {
  id            Int       @id @default(autoincrement())
  kiotviet_id   Int       @unique
  name          String    @db.VarChar(255)
  created_date  DateTime? @db.DateTime(6)
  modified_date DateTime? @db.DateTime(6)
  synced_at     DateTime  @default(now()) @db.DateTime(6)
  is_active     Boolean   @default(dbgenerated("b'1'")) @db.Bit(1)

  @@index([kiotviet_id])
  @@index([name])
  @@map("kiotviet_trademarks")
}

model kiotviet_category {
  id           Int                 @id @default(autoincrement())
  name         String
  rank         Int?
  createdDate  DateTime            @default(now())
  hasChild     Boolean             @default(false)
  kiotVietId   Int?                @unique
  lastSyncedAt DateTime            @default(now())
  modifiedDate DateTime            @updatedAt
  parentId     Int?
  retailerId   Int?
  parent       kiotviet_category?  @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children     kiotviet_category[] @relation("CategoryHierarchy")

  @@index([kiotVietId])
  @@index([parentId])
  @@index([lastSyncedAt])
}

model product {
  id                     BigInt    @id @default(autoincrement())
  title                  String?   @db.VarChar(255)
  title_meta             String?
  description            String?   @db.LongText
  general_description    String?   @db.LongText
  instruction            String?   @db.LongText
  images_url             String?   @db.LongText
  category_id            BigInt?
  category_slug          String?
  slug                   String?
  is_featured            Boolean?  @db.Bit(1)
  is_visible             Boolean?  @default(dbgenerated("b'0'")) @db.Bit(1)
  rate                   Float?
  featured_thumbnail     String?   @db.VarChar(255)
  recipe_thumbnail       String?   @db.VarChar(255)
  kiotviet_id            BigInt?   @unique
  kiotviet_code          String?   @unique @db.VarChar(255)
  kiotviet_name          String?   @db.VarChar(500)
  kiotviet_images        Json?
  kiotviet_price         Decimal?  @db.Decimal(15, 2)
  kiotviet_type          Int?
  kiotviet_category_id   Int?
  kiotviet_category_name String?
  kiotviet_trademark_id  Int?
  is_from_kiotviet       Boolean   @default(dbgenerated("b'0'")) @db.Bit(1)
  kiotviet_synced_at     DateTime? @db.DateTime(6)
  kiotviet_description   String?
  orders                 orders[]
  category               category? @relation(fields: [category_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  review                 review[]

  @@index([category_id, is_visible])
  @@index([category_slug])
  @@index([is_visible])
  @@index([kiotviet_id])
  @@index([kiotviet_code])
  @@index([kiotviet_category_id])
  @@index([kiotviet_trademark_id])
  @@index([is_from_kiotviet])
  @@index([slug])
}

model category {
  id                   BigInt     @id @default(autoincrement())
  name                 String?    @db.VarChar(255)
  description          String?    @db.LongText
  parent_id            BigInt?
  level                Int        @default(0)
  path                 String?    @db.VarChar(100)
  product_count        Int        @default(0)
  child_count          Int        @default(0)
  priority             Int?
  direct_product_count Int        @default(0)
  title_meta           String?
  slug                 String?    @db.VarChar(255)
  parent               category?  @relation("CategoryHierarchy", fields: [parent_id], references: [id], onDelete: Cascade)
  children             category[] @relation("CategoryHierarchy")
  product              product[]

  @@unique([slug, parent_id])
  @@index([parent_id, priority])
  @@index([path])
  @@index([level])
  @@index([slug])
}

model kiotviet_sync_log {
  id            Int       @id @default(autoincrement())
  sync_type     String    @db.VarChar(50)
  entity_type   String    @db.VarChar(50)
  started_at    DateTime  @default(now())
  completed_at  DateTime?
  status        String    @default("pending") @db.VarChar(20)
  total_synced  Int?      @default(0)
  total_updated Int?      @default(0)
  total_deleted Int?      @default(0)
  error_message String?   @db.Text
  details       Json?

  @@index([status])
  @@index([sync_type, started_at])
  @@index([entity_type])
}

model applicant {
  id           BigInt        @id @default(autoincrement())
  email        String?       @db.VarChar(255)
  name         String?       @db.VarChar(255)
  phone_number String?       @db.VarChar(255)
  resume_url   String?       @db.VarChar(255)
  application  application[]
}

model application {
  id           BigInt     @id @default(autoincrement())
  created_by   String?    @db.VarChar(255)
  created_date DateTime?  @db.DateTime(6)
  updated_by   String?    @db.VarChar(255)
  updated_date DateTime?  @db.DateTime(6)
  note         String?    @db.VarChar(255)
  status       String?    @db.VarChar(255)
  applicant_id BigInt?
  job_post_id  BigInt?
  applicant    applicant? @relation(fields: [applicant_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  job_post     job_post?  @relation(fields: [job_post_id], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@index([job_post_id])
  @@index([applicant_id])
}

model authority {
  id      BigInt  @id @default(autoincrement())
  role    String? @db.VarChar(255)
  user_id String? @db.VarChar(255)
  user    user?   @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@index([user_id])
}

model code_forgot_pass {
  id          BigInt    @id @default(autoincrement())
  code        String?   @db.VarChar(255)
  expire_date DateTime? @db.DateTime(6)
  user_id     String?   @db.VarChar(255)
  user        user?     @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@index([user_id])
}

model job_post {
  id                   BigInt        @id @default(autoincrement())
  created_by           String?       @db.VarChar(255)
  created_date         DateTime?     @db.DateTime(6)
  updated_by           String?       @db.VarChar(255)
  updated_date         DateTime?     @db.DateTime(6)
  application_deadline DateTime?     @db.Date
  employment_type      String?       @db.VarChar(255)
  job_description      String?       @db.LongText
  location             String?       @db.VarChar(255)
  title                String?       @db.VarChar(255)
  vacancies            Int
  work_mode            String?       @db.VarChar(255)
  working_hours        String?       @db.LongText
  salary_ranges        String?       @db.LongText
  application          application[]
}

model news {
  id           BigInt    @id @default(autoincrement())
  created_by   String?   @db.VarChar(255)
  created_date DateTime? @db.DateTime(6)
  updated_by   String?   @db.VarChar(255)
  updated_date DateTime? @db.DateTime(6)
  description  String?   @db.LongText
  html_content String?   @db.LongText
  images_url   String?   @db.LongText
  title        String?   @db.VarChar(255)
  view         Int?
  user_id      String?   @db.VarChar(255)
  type         String?   @db.VarChar(255)
  embed_url    String?   @db.LongText
  user         user?     @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@index([user_id])
}

model orders {
  id               BigInt         @id @default(autoincrement())
  created_by       String?        @db.VarChar(255)
  created_date     DateTime?      @db.DateTime(6)
  updated_by       String?        @db.VarChar(255)
  updated_date     DateTime?      @db.DateTime(6)
  quantity         Int?
  product_id       BigInt?
  product_order_id BigInt?
  product          product?       @relation(fields: [product_id], references: [id])
  product_order    product_order? @relation(fields: [product_order_id], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@index([product_id])
  @@index([product_order_id])
}

model product_order {
  id               BigInt         @id @default(autoincrement())
  created_date     DateTime?
  updated_by       String?
  updated_date     DateTime?
  address          String?        @db.LongText
  detailed_address String?        @db.VarChar(500)
  province         String?        @db.VarChar(255)
  district         String?        @db.VarChar(255)
  ward             String?        @db.VarChar(255)
  note             String?        @db.LongText
  payment_method   String?
  total            BigInt?
  phone            String?
  status           String?
  payment_status   String?
  full_name        String?
  email            String?
  orders           orders[]
  payment_logs     payment_logs[]
}

model review {
  id           BigInt    @id @default(autoincrement())
  created_by   String?   @db.VarChar(255)
  created_date DateTime? @db.DateTime(6)
  updated_by   String?   @db.VarChar(255)
  updated_date DateTime? @db.DateTime(6)
  comment      String?   @db.VarChar(255)
  rate         Int?
  product_id   BigInt?
  user_id      String?   @db.VarChar(255)
  product      product?  @relation(fields: [product_id], references: [id])
  user         user?     @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@index([user_id])
  @@index([product_id])
}

model user {
  id               String             @id @db.VarChar(255)
  created_by       String?            @db.VarChar(255)
  created_date     DateTime?          @db.DateTime(6)
  updated_by       String?            @db.VarChar(255)
  updated_date     DateTime?          @db.DateTime(6)
  address          String?            @db.VarChar(255)
  ava_url          String?            @db.VarChar(255)
  email            String?            @unique @db.VarChar(255)
  full_name        String?            @db.VarChar(255)
  is_active        Boolean            @db.Bit(1)
  password         String?            @db.VarChar(255)
  phone            String?            @unique @db.VarChar(255)
  authority        authority[]
  code_forgot_pass code_forgot_pass[]
  news             news[]
  review           review[]

  @@index([phone, email])
  @@index([email])
  @@index([phone])
}

model client_user {
  client_id           Int             @id @default(autoincrement())
  full_name           String?         @db.Text
  email               String?         @unique(map: "email") @db.VarChar(500)
  kiot_code           String?
  phone               String?         @db.VarChar(255)
  avatar              String?         @db.VarChar(255)
  pass_word           String?         @db.VarChar(255)
  face_app_id         String?         @db.VarChar(255)
  role                String?         @db.VarChar(50)
  refresh_token       String?         @db.Text
  detailed_address    String?         @db.VarChar(500)
  province            String?         @db.VarChar(255)
  district            String?         @db.VarChar(255)
  ward                String?         @db.VarChar(255)
}

model sync_log {
  id            Int       @id @default(autoincrement())
  sync_type     String    @db.VarChar(50)
  started_at    DateTime  @default(now())
  completed_at  DateTime?
  status        String    @default("pending") @db.VarChar(20)
  total_synced  Int?      @default(0)
  total_deleted Int?      @default(0)
  error_message String?   @db.Text
  details       Json?

  @@index([status])
  @@index([sync_type, started_at])
}

model payment_logs {
  id             BigInt        @id @default(autoincrement())
  order_id       BigInt
  event_type     String        @db.VarChar(50)
  event_data     Json?
  sepay_response Json?
  created_date   DateTime?     @default(now()) @db.DateTime(6)
  ip_address     String?       @db.VarChar(45)
  user_agent     String?       @db.Text
  product_order  product_order @relation(fields: [order_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([created_date])
  @@index([event_type])
  @@index([order_id])
}

model payment_webhooks {
  id             BigInt    @id @default(autoincrement())
  webhook_id     String    @unique @db.VarChar(255)
  provider       String    @default("sepay") @db.VarChar(50)
  order_code     String    @db.VarChar(255)
  transaction_id String?   @db.VarChar(255)
  status         String    @db.VarChar(50)
  amount         BigInt
  gateway_code   String?   @db.VarChar(50)
  signature      String    @db.VarChar(500)
  raw_data       Json
  processed      Boolean?  @default(false)
  processed_at   DateTime? @db.DateTime(6)
  error_message  String?   @db.Text
  created_date   DateTime? @default(now()) @db.DateTime(6)
  updated_date   DateTime? @default(now()) @db.DateTime(6)

  @@index([order_code])
  @@index([processed])
  @@index([status])
  @@index([transaction_id])
  @@index([webhook_id])
}

model webhook_log {
  id            Int       @id @default(autoincrement())
  webhook_type  String    @db.VarChar(50)
  payload       Json
  headers       Json?
  processed     Boolean?  @default(false)
  error_message String?   @db.Text
  created_at    DateTime? @default(now()) @db.Timestamp(0)
}

model pages {
  id               BigInt    @id @default(autoincrement())
  created_by       String?   @db.VarChar(255)
  created_date     DateTime? @db.DateTime(6)
  updated_by       String?   @db.VarChar(255)
  updated_date     DateTime? @db.DateTime(6)
  slug             String    @unique @db.VarChar(255)
  title            String    @db.VarChar(255)
  content          String?   @db.LongText
  meta_title       String?   @db.VarChar(255)
  meta_description String?   @db.Text
  display_order    Int?      @default(0)
  parent_id        BigInt?
  is_active        Boolean   @default(dbgenerated("b'1'")) @db.Bit(1)
  is_main_page     Boolean   @default(dbgenerated("b'0'")) @db.Bit(1)
  parent           pages?    @relation("PageHierarchy", fields: [parent_id], references: [id], onDelete: Cascade)
  children         pages[]   @relation("PageHierarchy")

  @@index([slug])
  @@index([parent_id])
  @@index([display_order])
  @@index([is_active])
}
